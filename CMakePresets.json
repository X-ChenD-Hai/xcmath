{
    "version": 9,
    "configurePresets": [
        {
            "name": "debug",
            "binaryDir": "build/debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/debug",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/bin/debug",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/lib/debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "ENABLE_TESTING": true
            }
        },
        {
            "name": "Release",
            "inherits": [
                "debug"
            ],
            "binaryDir": "build/release",
            "cacheVariables": {
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/release",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/bin/release",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/lib/release",
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        }
    ]
}